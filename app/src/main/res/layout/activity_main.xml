<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.dell.loginapp.MainActivity">

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="134dp"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="#ffff"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText2"
        android:layout_below="@+id/login"
        android:layout_marginTop="57dp"
        android:background="@color/colorPrimaryDark"
        android:hint="@string/pswd"
        android:drawableEnd="@drawable/eye"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textColorHint="#BDBCBE"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@color/colorPrimaryDark"
        android:hint="@string/email"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textColorHint="#BDBCBE"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText1"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="21dp"
        android:text="@string/login"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:text="Dont you remember your Password"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="or"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt1"
        android:layout_below="@+id/txt2"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="14dp"
        android:text="Connect with Facebook"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:layout_toStartOf="@+id/txt3"
        android:src="@drawable/fb" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white" />

    <View
        android:id="@+id/view2"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_above="@+id/imageView"
        android:layout_alignStart="@+id/editText1"
        android:layout_marginBottom="11dp"
        android:background="@android:color/white" />

    <View
        android:id="@+id/view3"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/editText1"
        android:layout_alignTop="@+id/view2"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt1"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="11dp"
        android:text="Dont you have an account ?"
        android:textColor="#ffff"
        android:textSize="20sp" />


</RelativeLayout>
